@import "../tpls/base.wxss";
@import "../wemark/wemark.wxss"
.detail-container {
  background-color:#F9F9F9
}

.article {
    width: 100%;
    padding: 15px;
    padding-bottom: 12px;
    margin-bottom: 10px;
    background: #FFF;
    overflow: hidden;
}

.article-head{
    display: flex;
    height:130rpx;
    color: #6D6D6D;
}

.article-head .head-left{
    flex-basis: 80rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content:center;
    /*background-color: #F5F6F5;*/
}

.article-head .head-right{
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.time-and-from {
  width: 100%;
  margin-top: 2px;
  font-size: 12px;
  color: #777;
  display: block;
}

.article-body{
  margin-bottom: 10rpx;
}

.pay{
  width: 150rpx;
  height: 50rpx;
  background-color:#434447;
  border-radius: 4rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}

.article-middle{
  display: flex;
  align-items: center;
  justify-content:center;
  margin:10px
}
